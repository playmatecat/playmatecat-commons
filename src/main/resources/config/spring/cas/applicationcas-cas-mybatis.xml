<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                    http://www.springframework.org/schema/tx 
                    http://www.springframework.org/schema/tx/spring-tx-4.1.xsd ">



	<!-- mybatis sqlsession管理器 -->
	<bean name="casSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean" autowire="byName">
	    <!-- cas在子系统进行鉴权数据源 -->
		<property name="dataSource" ref="casDataSource" />
		<property name="configLocation" value="classpath:/config/mybatis/cas/sqlMap-config.xml" />
		<property name="mapperLocations" value="classpath*:/casSqlMap/cas/*.xml"></property>
	</bean>
	
	<!-- mybatis接口编程自动扫描 -->
	<bean id="casMapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
	    <!-- 注意这部,通过传入的是一个文本name来反射sql factory解决了,properties在这个bean之后加载的问题！！ -->
        <property name="sqlSessionFactoryBeanName" value="casSqlSessionFactory"/>
        <property name="basePackage" value="com.playmatecat.cas.mapper"></property>
    </bean>

 
</beans>

